# Environment (development, production)
ENVIRONMENT=development

# API Security
API_KEY=csv-processor-dev-key
REQUIRE_API_KEY=true

# CORS Configuration
CORS_ALLOW_ALL=true
# CORS_EXTRA_ORIGINS=http://localhost:8000,http://127.0.0.1:8000

# File Processing
CHUNK_SIZE=1048576
# RESULTS_DIR=./results

# gRPC Configuration
GRPC_SERVER_ADDRESS=localhost:50051
GRPC_PORT=50051
GRPC_MAX_WORKERS=20
GRPC_UPDATE_INTERVAL=1.0 # in seconds

# For production, use:
# ENVIRONMENT=production
# CORS_ALLOW_ALL=false
# CORS_ALLOWED_ORIGINS=https://yourapp.com,https://www.yourapp.com

# AWS_S3_BUCKET
# AWS_REGION
# AWS_ACCESS_KEY_ID
# AWS_SECRET_ACCESS_KEY